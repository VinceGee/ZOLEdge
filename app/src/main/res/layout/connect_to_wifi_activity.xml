<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_connect"
    android:orientation="vertical"
    android:paddingTop="@dimen/value_100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:paddingLeft="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WiFi Name:"
            android:textColor="@color/green"
            android:textSize="@dimen/txt_25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_wifi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/value_10"
            android:text="WiFi Name "
            android:textColor="@color/select_green"
            android:textSize="@dimen/txt_25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WiFi Type:"
            android:textColor="@color/green"
            android:textSize="@dimen/txt_25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_wifi_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/value_10"
            android:text="WAP "
            android:textColor="@color/select_green"
            android:textSize="@dimen/txt_25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/select_green"
        android:padding="@dimen/value_5"
        android:text="Connect"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txt_25sp" />

</LinearLayout>