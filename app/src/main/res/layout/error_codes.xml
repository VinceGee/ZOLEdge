<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:id="@+id/headerScrollError"
        android:layout_height="@dimen/header_height">

        <LinearLayout android:orientation="horizontal"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="@dimen/cell_width"
                android:id="@+id/txtNameError"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/margin"
                android:text="Error Code"
                android:textAllCaps="true"
                android:gravity="center|start"
                android:textColor="@android:color/white"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="@dimen/cell_width"
                android:id="@+id/txtLogoError"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/margin"
                android:text="Error Cause"
                android:textAllCaps="true"
                android:gravity="center|start"
                android:textColor="@android:color/white"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="@dimen/cell_width"
                android:id="@+id/txtLocationError"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/margin"
                android:gravity="center|start"
                android:text="Solution"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:layout_height="match_parent"/>



        </LinearLayout>

    </HorizontalScrollView>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/rvClubError"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>