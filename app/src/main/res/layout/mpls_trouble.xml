<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:weightSum="1">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="fill_parent"
        xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:weightSum="1">

    <zw.co.vokers.zoledge.utils.VinceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24sp"
        android:paddingLeft="12dp"
        android:textSize="20sp"
        android:text="Lights on Media Converter"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="4dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <zw.co.vokers.zoledge.utils.WheelView
            android:id="@+id/lightsonmc"
            android:layout_height="110sp"
            android:layout_width="fill_parent"
            android:layout_gravity="center_vertical" />

        <zw.co.vokers.zoledge.utils.VinceTextView
            android:id="@+id/hostel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/lightsonmc"
            android:textSize="20sp"
            android:text="Solution"/>

        <zw.co.vokers.zoledge.utils.WheelView
            android:id="@+id/lights_solution"
            android:layout_height="250sp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/hostel_name" />


    </RelativeLayout>


    </LinearLayout>
</ScrollView>
