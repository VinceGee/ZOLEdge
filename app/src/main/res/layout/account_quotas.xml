<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:id="@+id/headerScrollQuotas"
        android:layout_height="@dimen/header_height">

        <LinearLayout android:orientation="horizontal"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <zw.co.vokers.zoledge.utils.VinceTextView
                android:layout_width="@dimen/cell_width"
                android:id="@+id/txtPackageName"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/margin"
                android:text="Package Name"
                android:textAllCaps="true"
                android:gravity="center|start"
                android:textColor="@android:color/white"
                android:layout_height="match_parent"/>

            <zw.co.vokers.zoledge.utils.VinceTextView
                android:layout_width="wrap_content"
                android:id="@+id/txtSandvineName"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/margin"
                android:text="Sandvine Name"
                android:textAllCaps="true"
                android:gravity="center|start"
                android:textColor="@android:color/white"
                android:layout_height="match_parent"/>

            <zw.co.vokers.zoledge.utils.VinceTextView
                android:layout_width="@dimen/cell_width"
                android:id="@+id/txtEmailAccounts"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/margin"
                android:gravity="center"
                android:text="Email Accounts"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:layout_height="match_parent"/>

            <zw.co.vokers.zoledge.utils.VinceTextView
                android:layout_width="@dimen/cell_width"
                android:id="@+id/txtDiskQuota"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/margin"
                android:text="Disk Quota"
                android:textAllCaps="true"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:layout_height="match_parent"/>

            <zw.co.vokers.zoledge.utils.VinceTextView
                android:layout_width="@dimen/cell_width"
                android:id="@+id/txtDomainsHosted"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/margin"
                android:text="Domain Hosted"
                android:textAllCaps="true"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:layout_height="match_parent"/>

            <zw.co.vokers.zoledge.utils.VinceTextView
                android:layout_width="@dimen/cell_width"
                android:id="@+id/txtWebsiteHosted"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/margin"
                android:gravity="center"
                android:text="Website hosted"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:layout_height="match_parent"/>

            <zw.co.vokers.zoledge.utils.VinceTextView
                android:layout_width="@dimen/cell_width"
                android:id="@+id/txtFreeDomainsRegistered"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/margin"
                android:gravity="center"
                android:text="Free Domains"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:layout_height="match_parent"/>



        </LinearLayout>

    </HorizontalScrollView>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/rvClubQuotas"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>