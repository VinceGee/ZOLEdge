<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/colorRow"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/row_height">

    <zw.co.vokers.zoledge.utils.VinceTextView
        android:layout_width="@dimen/cell_width"
        android:id="@+id/txtPackageName"
        android:layout_marginStart="@dimen/margin"
        android:gravity="center|start"
        android:textColor="@color/colorPrimaryText"
        android:layout_height="match_parent"/>

    <zw.co.vokers.zoledge.utils.VinceTextView
        android:layout_width="wrap_content"
        android:id="@+id/txtSandvineName"
        android:layout_marginStart="@dimen/margin"
        android:gravity="center|start"
        android:textColor="@color/colorSecondaryText"
        android:layout_height="match_parent"/>


    <zw.co.vokers.zoledge.utils.VinceTextView
        android:layout_width="@dimen/cell_width"
        android:id="@+id/txtEmailAccounts"
        android:layout_marginStart="@dimen/margin"
        android:gravity="center"
        android:textColor="@color/colorSecondaryText"
        android:layout_height="match_parent"/>

    <zw.co.vokers.zoledge.utils.VinceTextView
        android:layout_width="@dimen/cell_width"
        android:id="@+id/txtDiskQuota"
        android:layout_marginStart="@dimen/margin"
        android:gravity="center"
        android:textColor="@color/colorPrimaryText"
        android:layout_height="match_parent"/>

    <zw.co.vokers.zoledge.utils.VinceTextView
        android:layout_width="@dimen/cell_width"
        android:id="@+id/txtDomainsHosted"
        android:layout_marginStart="@dimen/margin"
        android:gravity="center"
        android:textColor="@color/colorSecondaryText"
        android:layout_height="match_parent"/>


    <zw.co.vokers.zoledge.utils.VinceTextView
        android:layout_width="@dimen/cell_width"
        android:id="@+id/txtWebsiteHosted"
        android:layout_marginStart="@dimen/margin"
        android:gravity="center"
        android:textColor="@color/colorSecondaryText"
        android:layout_height="match_parent"/>

    <zw.co.vokers.zoledge.utils.VinceTextView
        android:layout_width="@dimen/cell_width"
        android:id="@+id/txtFreeDomainsRegistered"
        android:layout_marginStart="@dimen/margin"
        android:gravity="center"
        android:textColor="@color/colorSecondaryText"
        android:layout_height="match_parent"/>

</LinearLayout>